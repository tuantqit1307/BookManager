<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCartDetails"
        android:layout_width="match_parent"
        android:background="#2962FF"
        android:layout_height="wrap_content"
        app:titleTextColor="#FFFF"
        app:title="GIỎ HÀNG"
        app:titleTextAppearance="@style/Toolbar"
        app:navigationIcon="?attr/homeAsUpIndicator">

        <TextView
            android:id="@+id/btnPay"
            android:textColor="@android:color/white"
            android:drawableRight="@drawable/ic_pay"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">
        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_below="@id/toolbarCartDetails"
        android:layout_marginTop="5dp"
        android:background="#FFF"
        >
        <ListView
            android:id="@+id/lv_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btnContinueBuy"
        android:layout_toLeftOf="@+id/btnAddBillDetails"
        android:layout_alignParentBottom="true"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:text="mua thêm"
        android:textColor="#801A1A"
        android:elevation="5dp"
        android:textSize="15sp"
        android:fontFamily="@font/nunitosemibold"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btn_thanhtoan"
        android:layout_marginTop="5dp"/>
    <Button
        android:id="@+id/btnAddBillDetails"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Thanh toán"
        android:textColor="#801A1A"
        android:elevation="5dp"
        android:textSize="15sp"
        android:fontFamily="@font/nunitosemibold"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btn_thanhtoan"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnDelBillDetails"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@+id/btnAddBillDetails"
        android:background="@drawable/btn_thanhtoan"
        android:elevation="5dp"
        android:fontFamily="@font/nunitosemibold"
        android:text="XOÁ TẤT CẢ"
        android:textColor="#801A1A"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>