<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/forgot"
        />
    <TextView
        android:id="@+id/txtForgotPass"
        android:text="QUÊN MẬT KHẨU?"
        android:fontFamily="@font/nunitosemibold"
        android:gravity="center"
        android:textColor="#59474b"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tvText"
        android:fontFamily="@font/nunitosemibold"
        android:text="Nhập số điện thoại đăng ký của bạn vào đây"
        android:layout_below="@+id/txtForgotPass"
        android:layout_marginBottom="10dp"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edPhone"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:inputType="phone"
        android:layout_marginRight="20dp"
        android:background="@drawable/edt_login"
        android:fontFamily="@font/nunitosemibold"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvText"
        android:hint="+84"
        android:gravity="left"
        android:textSize="20sp"
        android:padding="10dp"/>
    <Button
        android:id="@+id/btnResetPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_login"
        android:text="KHÔI PHỤC"
        android:textSize="16sp"
        android:fontFamily="@font/nunitosemibold"
        android:textColor="#ffffff"
        android:layout_below="@+id/edPhone"
        android:layout_marginTop="25dp"
        />
    <TextView
        android:id="@+id/tvBackLogin"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/nunitosemibold"
        android:text="Trở về trang chính"
        android:textColor="#304FFE"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnResetPass"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>

</RelativeLayout>