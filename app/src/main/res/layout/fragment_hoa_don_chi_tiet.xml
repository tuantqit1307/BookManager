<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#51B6ABAB"
    android:layout_height="match_parent"
    tools:context=".Fragment.HoaDonChiTietFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:elevation="5dp"
        android:background="#EEFFFFFF"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/toolbarBillDetails"
            android:layout_width="match_parent"
            android:background="@drawable/background_billdetails"
            android:text="HOÁ ĐƠN CHI TIẾT"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:fontFamily="@font/nunitosemibold"
            android:layout_height="?attr/actionBarSize"/>
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:text="THÔNG TIN SÁCH"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:padding="15dp"
            android:fontFamily="@font/nunitosemibold"
            android:textStyle="bold"
            android:layout_below="@+id/toolbarBillDetails"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_below="@+id/text1"
            android:layout_width="match_parent"
            android:background="#FFF"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="200dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lv_hdct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:text="THÔNG TIN MUA HÀNG"
            android:padding="15dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:fontFamily="@font/nunitosemibold"
            android:textStyle="bold"
            android:layout_below="@+id/layout1"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_below="@+id/text2"
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:background="#FFF"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvbillDateBuy"
                android:layout_width="wrap_content"
                android:text="Thời gian mua: "
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="@font/nunitosemibold"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/billDateBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26-04-2018"
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="@font/nunitosemibold"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/tvIDbill"
                android:layout_width="wrap_content"
                android:text="Mã Hoá Đơn: "
                android:layout_below="@+id/tvbillDateBuy"
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="@font/nunitosemibold"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/idBill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID1231241242"
                android:textSize="18sp"
                android:layout_below="@+id/tvbillDateBuy"
                android:textColor="#000000"
                android:fontFamily="@font/nunitosemibold"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/tvbillAmount"
                android:layout_width="wrap_content"
                android:text="Số lượng mua: "
                android:layout_below="@+id/tvIDbill"
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="@font/nunitosemibold"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/billAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:layout_below="@+id/idBill"
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="@font/nunitosemibold"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/tvbillMoney"
                android:layout_width="wrap_content"
                android:text="Số tiền thanh toán: "
                android:layout_below="@+id/tvbillAmount"
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="@font/nunitosemibold"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/billMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20000 VND"
                android:layout_below="@+id/billAmount"
                android:textSize="18sp"
                android:textColor="#000000"
                android:fontFamily="@font/nunitosemibold"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>