<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="5dp"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:background="#FFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgItem"
        android:layout_width="26dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:background="@drawable/ic_beenhere"
        android:layout_height="26dp"/>

    <TextView
        android:id="@+id/nameItem"
        android:layout_toRightOf="@id/imgItem"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="30dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/nunitosemibold"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Cho Đi Đừng Nhận Lại" />

    <TextView
        android:id="@+id/amountItem"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/nameItem"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/imgItem"
        android:fontFamily="@font/nunitosemibold"
        android:text="Số lượng: 2 cuốn"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/priceItem"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/amountItem"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="-5dp"
        android:layout_toRightOf="@id/imgItem"
        android:fontFamily="@font/nunitosemibold"
        android:text="Tổng tiền: 26.000 VND"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="17sp" />
    <Button
        android:id="@+id/delItem"
        android:layout_below="@+id/nameBook"
        android:textSize="12sp"
        android:layout_marginRight="8dp"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"
        android:background="@drawable/item_delete"
        android:paddingLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:elevation="5dp"
        android:paddingRight="5dp"
        android:layout_alignParentRight="true"
        style="@style/TextAppearance.MaterialComponents.Button"
        android:fontFamily="@font/nunitosemibold"
        android:layout_width="24dp"
        android:layout_height="24dp" />
</RelativeLayout>