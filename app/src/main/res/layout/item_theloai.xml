<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="5dp"
    android:padding="10dp"
    android:background="#0D646464"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/idTheLoai"
        android:layout_width="40dp"
        android:layout_margin="2dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_fiber"
        android:text="1"
        android:elevation="-5dp"
        android:fontFamily="@font/nunitosemibold"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#DD2C00"
        />
    <TextView
        android:id="@+id/nameTheLoai"
        android:text="Trinh thám"
        android:layout_margin="2dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textColor="@color/errorColor"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/idTheLoai"
        android:textStyle="bold"
        android:fontFamily="@font/nunitosemibold"
        />
    <Button
        android:id="@+id/btnDelTheLoai"
        android:layout_width="48dp"
        android:layout_alignParentRight="true"
        android:text="XÓA"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/background_statistics"
        android:layout_height="26dp">

    </Button>
</RelativeLayout>